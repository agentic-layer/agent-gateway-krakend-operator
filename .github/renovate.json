{
  "extends": [
    "github>agentic-layer/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["example.com/agent-gateway-krakend-operator"],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^internal/controller/\\.go$/"
      ],
      "matchStrings": [
        "defaultTemplateImageAdk\\s*=\\s*\"(?<depName>ghcr\\.io/agentic-layer/[^:]+):(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}
